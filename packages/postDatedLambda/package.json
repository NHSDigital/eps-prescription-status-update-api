{
  "name": "postDatedLambda",
  "version": "1.0.0",
  "description": "A lambda that handles the post-dated prescription logic for the notifications service",
  "main": "main.js",
  "author": "NHS Digital",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "unit": "POWERTOOLS_DEV=true NODE_OPTIONS=--experimental-vm-modules jest --no-cache --coverage",
