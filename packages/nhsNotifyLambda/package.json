{
  "name": "nhsNotifyLambda",
  "version": "1.0.0",
  "description": "A lambda that processes notification requests off SQS",
  "main": "nhsNotifyLambda.js",
  "author": "NHS Digital",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "unit": "POWERTOOLS_DEV=true NODE_OPTIONS=--experimental-vm-modules jest --no-cache --coverage",
    "lint": "eslint  --max-warnings 0 --fix --config ../../eslint.config.mjs .",
    "compile": "tsc",
    "test": "npm run compile && npm run unit",
    "check-licenses": "license-checker --failOn GPL --failOn LGPL --start ../..",
    "cli:test-token": "npm run compile && node lib/cli/test-token-exchange.js"
  },
  "dependencies": {
    "@aws-lambda-powertools/commons": "^2.30.2",
    "@aws-lambda-powertools/logger": "^2.30.2",
    "@aws-lambda-powertools/parameters": "^2.30.2",
    "@aws-sdk/client-ssm": "^3.978.0",
    "@middy/core": "^7.0.2",
    "@middy/input-output-logger": "^7.0.2",
    "@nhs/fhir-middy-error-handler": "^2.1.70",
    "axios": "^1.13.4",
    "axios-retry": "^4.5.0",
    "jose": "^6.1.3",
    "nock": "^14.0.10"
  },
  "devDependencies": {
    "@psu-common/testing": "^1.0.0",
    "axios-mock-adapter": "^2.1.0"
  }
}
